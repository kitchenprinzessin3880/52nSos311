package org.n52.sos.ogc.filter;

/**
 * class contains the constants for the filter package
 * 
 * @author Christoph Stasch
 * 
 */
public class FilterConstants {

    /**
     * enum represents the possible logical time operators as defined in OGC Filter Schema
     * 
     * @author Christoph Stasch
     * 
     * @version 0.1
     */
    public enum TimeOperator {
        TM_Before, TM_After, TM_Begins, TM_Ends, TM_BegunBy, TM_During, TM_Equals, TM_Contains, TM_Overlaps, TM_Meets, TM_OverlappedBy
    }

    /**
     * enum represents the possible logical spatial operators as defined in OGC Filter Schema
     * 
     * @author Christoph Stasch
     * 
     * @version 0.1
     */
    public enum SpatialOperator {
        Equals, Disjoint, Touches, Within, Overlaps, Crosses, Intersects, Contains, DWithin, Beyond, BBOX
    }

    /**
     * enum represents the possible logical comparison operators as defined in OGC Filter Schema
     * 
     * @author Christoph Stasch
     * 
     * @version 0.1
     */
    public enum ComparisonOperator {
        PropertyIsEqualTo, PropertyIsNotEqualTo, PropertyIsLessThan, PropertyIsGreaterThan, PropertyIsLessThanOrEqualTo, PropertyIsGreaterThanOrEqualTo, PropertyIsLike, PropertyIsNull, PropertyIsBetween
    }

}
