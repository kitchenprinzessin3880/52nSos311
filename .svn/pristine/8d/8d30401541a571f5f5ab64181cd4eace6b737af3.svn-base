package org.n52.sos.ogc.gml;


/**
 * @author Alexander C. Walkowski
 * 
 * @version 0.1
 */
public class GMLConstants {

    /** namespaces used in gml */
    public final static String NS_GML = "http://www.opengis.net/gml";

    /** element names used in GML */
    public final static String EN_TIME_INSTANT = "TimeInstant";

    /** element names used in GML */
    public final static String EN_TIME_POSITION = "timePosition";
    
    public final static String GML_DATE_FORMAT = "yyyy-MM-dd'T'HH:mm:ssZ";

    /**
     * Enumeration of the possible values for indeterminate Time attribute of eventtime in GetObservation
     * request
     * 
     * @author Christoph Stasch
     * 
     */
    public static enum IndetTimeValues {
        after, before, now, unknown
    }

    /**
     * enumeration of the possible sorting orders
     * 
     * @author Christoph Stasch
     * 
     */
    public static enum SortingOrder {
        ASC, DESC
    }

}
